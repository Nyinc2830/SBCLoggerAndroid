<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ToggleButton
        android:id="@+id/tglTabLogging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnTabEmailDialogue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="true"
        android:background="@drawable/my_btn_toggle"
        android:text="ToggleButton"
        android:textOff="Logging OFF"
        android:textOn="Logging ON" />

    <Button
        android:id="@+id/btnTabEmailDialogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:enabled="false"
        android:text="Email Data" />
    
    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnTabEmailDialogue"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/TabeventResultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tglTabLogging"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnTabEmailDialogue"
        android:layout_toRightOf="@+id/tglTabLogging"
        android:text="" 
        android:scrollbars = "vertical" 
        android:maxLines = "2"/>
 
</RelativeLayout>
